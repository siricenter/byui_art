{{extend 'layout.html'}}
{{if collection:}}
<div class="row">
<div class="slider span12">
    <!-- TODO: format the slider row so that images don't  overlap the rest of the content. -->
    {{#for item in items:}}
        {{#=A(IMG(_src=URL('download',args=item.f_image), _alt =item.f_name), _href=URL('items_details, vars=dict(itemId=item.id)))}}   
    {{#pass}}
</div>

<div class="tag-line">
    <p>{{#=group.tagline}}</p> 
    <h3 class="span12 text-center">This is a short tagline identifying the collection</h3>
</div>

<div class="featured">
    <!-- <img src=""> -->
    <p class="span4">this would be a spot for a main description</p>
    <ul class="span8">
    <!-- TODO: Figure out what we want to do with these featured items -->
    {{#for item in featuredItems:}}
        <li>featured item 1</li>
        <li>featured item 2</li>
        <li>featured item 3</li>
    </ul>
</div>
{{=DIV(H2('Items in this Collection'), _class=" span12")}}
{{for item in items:}}
    {{=DIV(A(DIV(IMG(_src=URL('download', args=item.f_image), _alt=item.f_name), H2(item.f_name)), _href=URL('item_details', vars=dict(itemId=item.id))), _class="tile span4")}}
{{pass}}
<div class="span12">
    {{=HR()}}
    <div class="span6 comment-block">
        {{for post in comments:}}
            <div class="post"><p>
                On {{=post.created_on}} {{=post.created_by.first_name}}
                says <span class="post_body">{{=post.f_comment}}</span>
            </p></div>
        {{pass}}
        {{=LOAD('comments','coll_post.load',ajax=True,args=[collectionId])}}
    </div>
</div>

</div>
{{pass}}
